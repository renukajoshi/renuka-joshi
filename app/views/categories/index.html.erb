

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
       
        <td><%= link_to 'Show', category , class: "btn btn-info" %></td>
       
        <td><%= link_to 'Destroy', category,  method: :delete, data: { confirm: 'Are you sure?' },class: "glyphicon glyphicon-trash , btn btn-danger btn-md"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to new_category_path, class: 'btn btn-info' do %>
  <i class="glyphicon glyphicon-plus"></i> New Category
<% end %>
    

