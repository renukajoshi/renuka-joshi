
<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @category.name %>
</p>


<p>
  <strong>Created at:</strong>
  <%= @category.created_at %>
</p>

<p>
  <strong>Updated at:</strong>
  <%= @category.updated_at %>
</p>



<h1>Listing posts</h1>

<table border="2" cellpadding="10" cellspacing="0">
  <thead>
    <tr>
      <th>userid</th>
      <th>Title</th>
      <th>Description</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.posts.each do |post| %>
      <tr>
        <td><%= post.user_id%></td>
        <!-- added link to post title-->
        <td><%= link_to post.Title , comments_path(:id => post.id) %></td>
        <td><%= post.Description %></td>
        <td><%= post.tags.map(&:name).join(',') %></td>
        <td><%= link_to 'Show', category_posts_path(post.category) %></td>
        <td><%= link_to 'Edit', edit_category_post_path(post.category,post) %></td>
        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>