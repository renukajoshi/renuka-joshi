<html>
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <!--script src="//code.jquery.com/jquery-1.10.2.js"></script-->
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


  </head>
  <body>

    <h2>Sign up</h2>
    <hr class="colorgraph">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-inline center","data-toggle"=>"validator"}) do |f| %>
    <%= devise_error_messages! %>

<div class="row">
<div class="col-lg-8">
    <p>
      <div class="form-group">
        <%= f.text_field :first_name, autofocus: true , class: "form-control",:placeholder => "First Name" , required: true %>
        <%= f.text_field :last_name,class: "form-control", :placeholder => "Last Name" , required: true %>
      </div>
    </p>

    <p>
      <div class="form-group">
        <%= f.email_field :email,class: "form-control", :placeholder => "Email" , value: (resource.errors.include?(:email) ? resource.errors.get(:email).join(', ') : resource.email )  %>
      </div>
    </p>


    <p>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control" , autocomplete: "off" , :placeholder => " Enter the passowrd" , required: true %>
        <%= f.password_field :password_confirmation, class: "form-control" , autocomplete: "off" , :placeholder => " Enter the passowrd" , required: true %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </p>


<!--Birthdate using bootstrap datetimepicker -->
  
    <p>
      <div class="field">
        <%= f.label "Birth Date" %><br>
        <script type="text/javascript">
          $(document).ready(function(){
              $('.datepicker').datepicker();
            });
        </script>
        <%= f.text_field :birthdate , :id => "datepicker" , class: "datepicker" , required: true %>
      </div>

    </p>


  <div class="field">
    <%=  f.label :gender %><br/>
    <%= f.radio_button :gender, true %> Male
    <%= f.radio_button :gender, false %>Female
  </div>


  <div class="field">
    <%=  f.label :country %><br/>
    <%= f.country_select :country , class: "dropdown" , required: true %>
  </div><br>

 


  <div class="actions">
    <%= f.submit "Sign up" , class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>
</html>