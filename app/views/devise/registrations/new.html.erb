<html>
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <!--script src="//code.jquery.com/jquery-1.10.2.js"></script-->
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <script>
  $(function() {
    $( "#mydatepicker" ).datepicker();
  });
  </script>

 <meta charset="utf-8">
    <title>Bootsrtap Demo</title>
    <link rel="stylesheet" href="css/bootstrap.css"  type="text/css"/>
  </head>
  <body>

    <h2>Sign up</h2>

  <div class="col-xs-12 col-sm-8 col-md-6">
  <form role="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name) , method: "POST") do |f| %>
    <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :first_name, autofocus: true ,class: "form-control input-lg" , :placeholder => " Enter the First Name" , required: true%>
        <%= f.text_field :last_name, class: "form-control" , :placeholder => " Enter the Last Name" , required: true %>
      </div>

  
      <div class="form-group">
        <%= f.email_field :email, class: "form-control" , :placeholder => " Enter the Email" , required: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control", autocomplete: "off" , :placeholder => " Enter the passowrd" , required: true %>
        <%= f.password_field :password_confirmation, class: "form-control" , autocomplete: "off" , :placeholder => "Re-enter passowrd" , required: true %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>


      <div class="form-group">
        <%= f.label "Birth Date" %>
        <%= f.date_select :birthdate , :id => "mydatepicker" , required: true %>
      </div>

      
      <div class="radio">
        <%= f.radio_button :gender, true %> Male
      </div>

      <div class="radio">
        <%= f.radio_button :gender, false %>Female
      </div>


      <div class="select">
        <%=  f.label "Country" %>
        <%= f.country_select :country , required: true %>
      </div><br>

  
     
      <br>
      <div class="actions">
        <%= f.submit "Sign Up" , class: "btn btn-primary btn-lg"%>
      </div>

 

<%= render "devise/shared/links" %>

<% end %>

</form>
</div>
</body>
</html>
