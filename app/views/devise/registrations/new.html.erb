<html>
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <!--script src="//code.jquery.com/jquery-1.10.2.js"></script-->
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
</head>
<body>

<!--Useing Grid System from bootstrap-->
<div class="row">
 <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <h2>Sign up</h2>
    <hr class="colorgraph">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-inline center","data-toggle"=>"validator"}) do |f| %>
    <%= devise_error_messages! %>

    <form data-toggle="validator" role="form">

     <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="field form-group">
            <%= f.text_field :first_name, autofocus: true , class: "form-control",:placeholder => "First Name" , required: true %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 col-md-pull-2">
          <div class="field form-group">
            <%= f.text_field :last_name,class: "form-control", :placeholder => "Last Name" , required: true %>
          </div>
        </div>
      </div>
      <br>

      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="field form-group">
            <%= f.email_field :email,class: "form-control", :placeholder => "Email" , value: (resource.errors.include?(:email) ? resource.errors.get(:email).join(', ') : resource.email ) , required:true %>
          </div>
        </div>
      </div>
      <br>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="field form-group">
          <%= f.password_field :password, class: "form-control" , autocomplete: "off" , :placeholder => " Enter the passowrd" , required: true %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-6 col-md-pull-2">
        <div class="field form-group">
            <%= f.password_field :password_confirmation, class: "form-control" , autocomplete: "off" , :placeholder => " Enter the passowrd" , required: true %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
        </div>
      </div>
    </div>



<!--Birthdate using bootstrap datetimepicker -->
  
     <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="field form-group">
            <%= f.label "Birth Date" %><br>
          
              <%= f.text_field :birthdate , :id => "example1" , class: "datepicker" , required: true %>
          </div>
        </div>
      </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="field from-group">
        <%=  f.label :gender %><br/>
        <%= f.radio_button :gender, true %> Male
        <%= f.radio_button :gender, false %>Female
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="field">
        <%=  f.label :country %><br/>
        <%= f.country_select :country , class: "dropdown" , required: true %>
      </div>
    </div>
 </div>


  <div class="actions">
    <%= f.submit "Sign up" , class: "btn btn-primary" %>
  </div>
</form>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>
</html>