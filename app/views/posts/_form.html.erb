

        <%= form_for ([@category,@post]) do |f| %>
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

               <ul>
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div> 
          <% end %>

          <%= f.hidden_field :user_id , value: params[:user_id] %> 

          <div class="field">
            <%= f.label :Title %><br>
            <%= f.text_field :Title %>
          </div>
 
         <div class="field">
          <%= f.label :Description %><br>
          <%= f.text_area :Description , :col => 25, :rows => 5 %>
         </div>

<!--Retriving tags from tag table-->
        <div class="field">

          <% @all_tags.each do |tag| %>
            <%= check_box_tag 'tag_ids[]', tag.id %>
                <%#= check_box_tag(tag.id,:name => 'post[tag_id][]')  %>
            <%= tag.name %>
          <% end %>
        </div>
 

          <div class="actions">
          <%= f.submit "Create" , class: "btn btn-success" %>
       </div>
  <% end %>