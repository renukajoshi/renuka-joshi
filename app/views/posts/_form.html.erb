<%= form_for ([@post,@category]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>


    <%= f.hidden_field :user_id %> 
    
   
  <% end %>



  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :Title %>
  </div>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :Description %>
  </div>

  <br>



  <div class="field"> 
   <%= f.label "Tags" %><br /> 
   <% for tag in Tag.all %> 
   <%= check_box_tag 'post[tag_id][]', tag.id, :id => dom_id(tag) %> 
   <%= label_tag dom_id(tag), tag.name, :class => "check_box_label" %> 
   <% end %> 
 </div>



  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
