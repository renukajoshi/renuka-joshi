<h1>Listing posts of <%= @category.name %></h1>

<table border="2" cellpadding="10" cellspacing="0">
  <thead>
    <tr>
      <th>userid</th>
      <th>Title</th>
      <th>Description</th>
      <th>Comment</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id%></td>
        <!-- added link to post title-->
        <td><%= link_to post.Title , comments_path(:id => post.id) %></td>
        <td><%= post.Description %></td>
        <td><%= post.comments.map(&:body).join(',') %></td>
        <td><%= post.tags.map(&:name).join(',') %></td>
        <td><%= link_to 'Show', category_post_path(post.category,post) %></td>
        <td><%= link_to 'Edit', edit_category_post_path(post.category,post) %></td>
        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  

            

<br>

<%= link_to 'New Post', new_category_post_path(@category) %>
