<h1>Listing posts</h1>

<table border="2" cellpadding="10" cellspacing="0">
  <thead>
    <tr>
      <th>userid</th>
      <th>Title</th>
      <th>Description</th>
      <th>Comment</th>
      <th>Tag</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.userid%></td>
        <td><%= post.Title %></td>
        <td><%= post.Description %></td>
        <td><%= post.comments.map(&:comment).join(',') %></td>
        <td><%= post.tags.map(&:Tag).join(',') %></td>
        <td><%= post.categories.name%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>Tag</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% @posts.each do |p| %>
              <%= p.tags.collect(&:Tag).join(",") %>  
            <% end %>
      </td>
    </tr>
  </tbody>
</table>
  

            

