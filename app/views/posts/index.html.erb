<h3>Listing posts of <%= @category.name %></h3>

<table class="table">
  <thead>
    <tr>
      <th>userid</th>
      <th>Title</th>
      <th>Description</th>
      <th>Comment</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id%></td>
        
        <td><%= post.Title %></td>
        <td><%= post.Description %></td>
        <td><%= post.comments.map{|t| t.body}.join(',') %></td>
        <td>
          
         <% post.tags.each do |tag| %>
              <%=link_to tag.name  , tags_path(:id => tag)%> ,
          <% end %>



        </td>
        <td><%= link_to 'Show', category_post_path(post.category,post), class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_category_post_path(post.category,post),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', category_post_path(post.category,post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  

            

<br>

<%= link_to 'New Post', new_category_post_path(@category) %> |
<%= link_to 'Back', categories_path %>
